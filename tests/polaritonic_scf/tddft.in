sys.path.insert(0, '../../..')
import hilbert
import numpy as np

molecule h2 {

#h 0.0 0.0 0.0
#h 0.0 0.0 r
#o 
#h 1 1.0
#h 1 1.0 2 104.5
         O            0.000000000000     0.000000000000    -0.068516219320 
         H            0.000000000000    -0.790689573744     0.543701060715 
         H            0.000000000000     0.790689573744     0.543701060715 
no_reorient
nocom
symmetry c1
}

set { basis cc-pvdz
  scf_type cd 
  e_convergence 1e-8
  d_convergence 1e-8
  cholesky_tolerance 1e-12
} 


# freq: w from CIS
# lambda: 0.05
# coupling g = 0.05 / sqrt(2*w)

w = 0.265754876050
g = 0.05 / np.sqrt(2.0 * w)
set hilbert {
  maxiter 500
  n_photon_states          2
  cavity_frequency         [0.0, 0.0, $w]
  cavity_coupling_strength [0.0, 0.0, $g]
  maxdim                   15
  indim                    5
}

activate(h2)

h2.r = 0.76
set num_roots 10

#set wcombine false
set reference rks
set TDSCF_TDA false
set TDSCF_STATES 10
energy('td-b3lyp')
set df_ints_io save
set reference rks
en,wfn = energy('b3lyp',return_wfn=True)
energy('polaritonic-tddft',ref_wfn=wfn) 

